{
  "manifest_version": 2,

  "name": "Hackaton: permitted goods",
  "description": "This extension will analyze goods",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["*"],
    "js": ["content.js"]
  }],

  "permissions": [
    "tabs",
    "activeTab",
    "*://localhost:3000/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}